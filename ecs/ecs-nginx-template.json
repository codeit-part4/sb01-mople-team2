{
  "family": "nginx-gateway",
  "networkMode": "awsvpc",
  "executionRoleArn": "${EXECUTION_ROLE_ARN}",
  "requiresCompatibilities": ["EC2"],
  "cpu": "256",
  "memory": "256",
  "containerDefinitions": [
    {
      "name": "nginx-gateway",
      "image": "${ECR_NGINX_URI}:latest",
      "cpu": 256,
      "memoryReservation": 256,
      "essential": true,
      "portMappings": [
        {
          "name": "nginx-gateway-80-tcp",
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp",
          "appProtocol": "http"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/nginx-gateway",
          "awslogs-create-group": "true",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
